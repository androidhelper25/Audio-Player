<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.medell.audioplayer.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AUDIO PLAYER"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/textView"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:id="@+id/lvPlaylist"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
    </LinearLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@android:color/background_dark"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                />

<android.support.v4.widget.Space
    android:layout_width="20dp"
    android:layout_height="wrap_content" />
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="&lt;&lt;"
            android:id="@+id/btnbck"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/seekBar"
            android:layout_toRightOf="@+id/btnprv"
            android:layout_toEndOf="@+id/btnprv"
             />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="||"
            android:id="@+id/btnplay"
            android:layout_alignTop="@+id/btnbck"
            android:layout_toRightOf="@+id/btnbck"
            android:layout_toEndOf="@+id/btnbck"
             />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=">>"
            android:id="@+id/btnfwd"
            android:layout_alignTop="@+id/btnplay"
            android:layout_toRightOf="@+id/btnplay"
            android:layout_toEndOf="@+id/btnplay"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="|&lt;"
            android:id="@+id/btnprv"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_alignTop="@+id/btnbck"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=">|"
            android:id="@+id/btnnxt"
            android:layout_alignBottom="@+id/btnfwd"
            android:layout_toRightOf="@+id/btnfwd"
            android:layout_toEndOf="@+id/btnfwd"
            android:layout_alignTop="@id/btnfwd"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView2"
                android:layout_above="@+id/seekBar"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView"
                tools:ignore="NotSibling" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView3"
                android:layout_above="@+id/seekBar"
                android:layout_alignRight="@+id/btnfwd"
                android:layout_alignEnd="@+id/btnfwd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView4"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_centerHorizontal="true" />
    </RelativeLayout>


</LinearLayout>
